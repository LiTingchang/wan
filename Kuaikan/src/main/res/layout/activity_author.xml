<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kuaikan.comic.ui.view.PullToZoomListView
        android:id="@+id/author_pull2zoomlistview"
        android:divider="@null"
        android:background="@color/color_white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </com.kuaikan.comic.ui.view.PullToZoomListView>

    <FrameLayout
        android:id="@+id/activity_author_back_layout"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/activity_author_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_album_nav_back"
            android:layout_gravity="center"/>

        <View
            android:id="@+id/activity_author_back_bg"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/bg_rounded_corner_topic_back_bg"
            android:layout_gravity="center"/>

    </FrameLayout>

</FrameLayout>