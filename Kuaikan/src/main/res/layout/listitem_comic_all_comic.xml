<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="144dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_kuaikan_card_bg"
    android:layout_marginLeft="10dp"
    android:padding="1px"
    android:clickable="true">

    <ImageView
        android:id="@+id/comic_image"
        android:layout_width="144dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/comic_title"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/comic_image"
        android:textColor="@color/color_7e7e7e"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/comic_author"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/comic_title"
        android:textColor="@color/color_c2c2c2"
        android:paddingTop="5dp"
        android:paddingBottom="9dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="8dp"
        android:textSize="13sp" />

</RelativeLayout>
