<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#aeaeae" />
            <TextView
                android:id="@+id/more_appraise"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="赏个好评"
                android:textColor="#241c09"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="#aeaeae" />

            <RelativeLayout
                android:id="@+id/send_feedback"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="意见反馈"
                    android:textColor="#241c09"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:src="@drawable/ic_listitem_next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="#aeaeae" />

            <TextView
                android:id="@+id/share_app"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="推荐给好友"
                android:paddingLeft="10dp"
                android:textColor="#241c09"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#aeaeae" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/clean_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#aeaeae" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="清理缓存"
                android:textColor="#241c09"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="#aeaeae" />

            <RelativeLayout
                android:id="@+id/home_about_kk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_alignParentLeft="true"
                    android:text="关于快看"
                    android:paddingLeft="10dp"
                    android:textColor="#241c09"
                    android:gravity="center_vertical"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:src="@drawable/ic_listitem_next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="#aeaeae" />

        </LinearLayout>

        <TextView
            android:id="@+id/more_check_update"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:text="版本更新"
            android:textColor="#241c09"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#aeaeae" />


        <LinearLayout
            android:id="@+id/more_recommend_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="推荐应用"
                android:textColor="@color/color_9a9a9a"
                android:textSize="14sp" />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="1px"
                android:background="#aeaeae" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/more_recommend_app_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:scrollbars="none"
                android:background="@color/white"/>

            <LinearLayout
                android:id="@+id/more_recommend_app_more_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:background="#aeaeae" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/color_241c09"
                        android:layout_centerVertical="true"
                        android:text="更多精彩应用"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="15dp"
                        android:src="@drawable/ic_listitem_next" />

                </RelativeLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#aeaeae" />


        </LinearLayout>

        <TextView
            android:id="@+id/more_logout"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:text="退出当前账号"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:background="@drawable/bg_button_login_longest"/>

    </LinearLayout>
</ScrollView>
