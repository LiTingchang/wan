<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/author_show_comic_weibo_ly"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_height="42dp">

        <TextView
            android:id="@+id/author_show_comic_weibo_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_author_weibo" />

        <TextView
            android:id="@+id/author_show_comic_weibo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/author_show_comic_weibo_ic"
            android:text="微博"
            android:textColor="@color/color_da7973"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="点击复制"
            android:textColor="@color/color_cccccc"
            android:textSize="11sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/author_show_comic_weixin_ly"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_height="43dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/color_f0f0f0" />

        <TextView
            android:id="@+id/author_show_comic_weixin_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/ic_author_wechat" />

        <TextView
            android:id="@+id/author_show_comic_weixin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/author_show_comic_weixin_ic"
            android:text="微信"
            android:textColor="@color/color_5dac82"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="点击复制"
            android:textColor="@color/color_cccccc"
            android:textSize="11sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/author_show_comic_link_ly"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_height="43dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/color_f0f0f0" />

        <TextView
            android:id="@+id/author_show_comic_link_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/ic_author_link" />

        <TextView
            android:id="@+id/author_show_comic_link_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/author_show_comic_link_ic"
            android:text="网站地址"
            android:textColor="@color/color_67a6be"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="访问网站"
            android:textColor="@color/color_cccccc"
            android:textSize="11sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/author_show_comic_download_ly"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:visibility="gone">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/color_f0f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                android:id="@+id/author_show_comic_download_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dialog_show_comic_download" />

            <TextView
                android:id="@+id/author_show_comic_download_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/author_show_comic_download_ic"
                android:text="下载应用"
                android:textColor="@color/color_818181"
                android:textSize="11sp" />

        </RelativeLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/background"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:background="@color/color_white"
            android:textColor="@color/color_G1"
            android:text="TA的专题"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:background="@color/color_d0d0d0" />

</LinearLayout>