<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:background="@color/color_white"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/color_G1"
            android:text="专题列表"/>

        <LinearLayout
            android:id="@+id/topic_detail_comic_order_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/topic_detail_comic_order_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="倒序"
                android:textSize="10sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_G3"
                android:layout_marginRight="3dp"/>

            <ImageView
                android:id="@+id/topic_detail_comic_order_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/topic_detail_comic_order_reverse"
                android:background="@null"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:background="@color/divider_gray"/>

</LinearLayout>