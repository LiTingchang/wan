<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_e3e3e3">

    </View>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="109dp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="2"
        android:clickable="true">
        

        <CheckBox
            android:id="@+id/comic_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/bg_checkbox_like"
            android:gravity="center"
            android:text="已赞"
            android:textColor="#ffba15"
            android:layout_weight="1"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="74dp"
            android:layout_marginTop="9dp"
            android:background="@color/color_e3e3e3"/>

        <CheckBox
            android:id="@+id/comic_fav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/bg_checkbox_fav"
            android:gravity="center"
            android:text="收藏本条"
            android:textColor="#ffba15"
            android:layout_weight="1"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_e3e3e3">
    </View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="109dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="2"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/comic_pre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_comic_detail_pre">

            <TextView
                android:id="@+id/comic_pre_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="6dp"
                android:text="上一篇"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/comic_pre_text"
                android:src="@drawable/ic_comic_detail_pre"/>


        </RelativeLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="74dp"
            android:layout_marginTop="9dp"
            android:background="@color/color_e3e3e3"/>


        <RelativeLayout
            android:id="@+id/comic_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_comic_detail_pre">

            <TextView
                android:id="@+id/comic_next_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingRight="6dp"
                android:text="下一篇"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toRightOf="@id/comic_next_text"
                android:background="@null"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_comic_detail_next"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="#757575"
            android:gravity="center_vertical"
            android:text="热门评论" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e3e3e3" />

    </LinearLayout>

</LinearLayout>

